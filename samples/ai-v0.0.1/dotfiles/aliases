# Oracle Linux 9 Development Container - Enhanced Aliases
# Productivity aliases following Laravel Homestead patterns and modern CLI best practices
# Security-conscious with helpful shortcuts for development workflows

# =============================================================================
# Core System Aliases
# =============================================================================

# Enhanced ls commands
if command -v exa &> /dev/null; then
    alias ls='exa --color=auto --group-directories-first'
    alias ll='exa -l --color=auto --group-directories-first --time-style=long-iso'
    alias la='exa -la --color=auto --group-directories-first --time-style=long-iso'
    alias lt='exa --tree --level=2 --color=auto'
    alias lta='exa --tree --level=2 -a --color=auto'
else
    alias ls='ls --color=auto --group-directories-first'
    alias ll='ls -alF --color=auto --time-style=long-iso'
    alias la='ls -A --color=auto'
    alias l='ls -CF --color=auto'
fi

# Enhanced grep
if command -v rg &> /dev/null; then
    alias grep='rg'
    alias fgrep='rg -F'
    alias egrep='rg'
else
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Enhanced cat
if command -v bat &> /dev/null; then
    alias cat='bat --style=auto'
    alias ccat='/bin/cat'  # Original cat
fi

# Enhanced find
if command -v fd &> /dev/null; then
    alias find='fd'
    alias ffind='/usr/bin/find'  # Original find
fi

# Directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

# Directory operations
alias mkdir='mkdir -pv'
alias rmdir='rmdir -v'

# File operations with safety
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias ln='ln -iv'

# =============================================================================
# System Information and Monitoring
# =============================================================================

# System information
alias sysinfo='uname -a && cat /etc/os-release'
alias meminfo='free -h'
alias diskinfo='df -h'
alias cpuinfo='lscpu'
alias netinfo='ip addr show'

# Process management
if command -v htop &> /dev/null; then
    alias top='htop'
fi
alias psg='ps aux | grep -v grep | grep -i'
alias pscpu='ps auxf | sort -nr -k 3'
alias psmem='ps auxf | sort -nr -k 4'

# Network utilities
alias ping='ping -c 5'
alias ports='netstat -tulanp'
alias listening='ss -tuln'
alias myip='curl -s https://ipinfo.io/ip'
alias localip='hostname -I | awk "{print \$1}"'

# Disk usage
alias du='du -h'
alias dus='du -sh'
alias duh='du -h --max-depth=1 | sort -hr'

