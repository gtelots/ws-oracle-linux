# Oracle Linux package management
alias dnf-update='sudo microdnf update'
alias dnf-install='sudo microdnf install'
alias dnf-remove='sudo microdnf remove'
alias dnf-search='microdnf search'
alias dnf-info='microdnf info'
alias dnf-list='microdnf list'
alias dnf-clean='sudo microdnf clean all'

# Python package management
alias pip='pip3'
alias pipi='pip3 install --user'
alias pipu='pip3 install --user --upgrade'
alias pipf='pip3 freeze'
alias pipl='pip3 list'
alias pips='pip3 search'

# Node.js package management
alias ni='npm install'
alias nig='npm install -g'
alias nis='npm install --save'
alias nid='npm install --save-dev'
alias nr='npm run'
alias ns='npm start'
alias nt='npm test'
alias nb='npm run build'
alias nls='npm list'
alias nout='npm outdated'
alias nup='npm update'

# Yarn alternatives
alias yi='yarn install'
alias ya='yarn add'
alias yad='yarn add --dev'
alias yr='yarn run'
alias ys='yarn start'
alias yt='yarn test'
