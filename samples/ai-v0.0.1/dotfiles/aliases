alias yup='yarn upgrade'

# =============================================================================
# Text Processing and Utilities
# =============================================================================

# Text processing
alias h='head'
alias t='tail'
alias tf='tail -f'
alias less='less -R'
alias more='less'
alias zless='zless -R'

# JSON processing
if command -v jq &> /dev/null; then
    alias json='jq .'
    alias jsonc='jq -C .'
fi

# YAML processing
if command -v yq &> /dev/null; then
    alias yaml='yq .'
    alias yamlc='yq -C .'
fi

# Archive operations
alias tgz='tar -czf'
alias untgz='tar -xzf'
alias tbz='tar -cjf'
alias untbz='tar -xjf'

# =============================================================================
# Security and System Administration
# =============================================================================

# File permissions
alias chx='chmod +x'
alias chr='chmod +r'
alias chw='chmod +w'
alias 644='chmod 644'
alias 755='chmod 755'
alias 777='chmod 777'

# Ownership
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# System services
alias sctl='systemctl'
alias sstat='systemctl status'
alias sstart='sudo systemctl start'
alias sstop='sudo systemctl stop'
alias srestart='sudo systemctl restart'
alias senable='sudo systemctl enable'
alias sdisable='sudo systemctl disable'

# Log viewing
alias logs='sudo journalctl -f'
alias syslog='sudo tail -f /var/log/messages'
alias authlog='sudo tail -f /var/log/secure'

# =============================================================================
# Development Environment Shortcuts
# =============================================================================

# Quick navigation to common directories
alias workspace='cd ${WORKSPACE_DIR:-/workspace}'
alias home='cd ~'
alias root='cd /'
alias etc='cd /etc'
alias var='cd /var'
alias tmp='cd /tmp'
alias opt='cd /opt'

# Editor shortcuts
alias v='vim'
alias vi='vim'
alias nano='nano -w'
alias edit='${EDITOR:-vim}'

# Quick file operations
alias c='clear'
alias cls='clear'
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias nowtime='date +"%d-%m-%Y %T"'
alias nowdate='date +"%d-%m-%Y"'

# =============================================================================
# Fun and Productivity
# =============================================================================

# Weather (if curl is available)
alias weather='curl -s "wttr.in/?format=3"'
alias forecast='curl -s "wttr.in"'

# Quick calculations
alias calc='bc -l'

# Generate random passwords
alias genpass='openssl rand -base64 32'
alias genpass16='openssl rand -base64 16'

# Quick HTTP server
alias serve='python3 -m http.server 8000'
alias serve-php='php -S localhost:8000'

# =============================================================================
# Container-Specific Aliases
# =============================================================================

# Health checks
alias health='curl -s http://localhost:8080/health || echo "Health endpoint not available"'
alias status='/opt/scripts/healthcheck.sh'
alias security='/opt/scripts/security-check.sh'

# Container information
alias container-info='echo "Container: $(hostname)" && echo "User: $(whoami)" && echo "UID: $EUID" && echo "Workspace: ${WORKSPACE_DIR:-/workspace}"'

# Quick development setup
alias dev-setup='cd ${WORKSPACE_DIR:-/workspace} && ls -la'
alias dev-clean='cd ${WORKSPACE_DIR:-/workspace} && find . -name "node_modules" -type d -exec rm -rf {} + 2>/dev/null || true'

