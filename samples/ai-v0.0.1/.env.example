# Oracle Linux 9 Development Container Environment Configuration
# Copy this file to .env and customize for your environment
# Following enterprise security and configuration best practices

# =============================================================================
# Container Configuration
# =============================================================================

# Container identity and metadata
CONTAINER_NAME=oracle-linux-dev
CONTAINER_HOSTNAME=oracle-dev
CONTAINER_USER=developer
CONTAINER_UID=1000
CONTAINER_GID=1000

# Image configuration
IMAGE_NAME=oracle-linux-dev
IMAGE_TAG=latest
REGISTRY=localhost

# Workspace and volume configuration
WORKSPACE_DIR=/workspace
HOME_DIR=/home/developer
DATA_DIR=/data
LOGS_DIR=/var/log/container

# =============================================================================
# Network and Port Configuration
# =============================================================================

# Application ports
HTTP_PORT=8080
HTTPS_PORT=8443
SSH_PORT=2222
DEBUG_PORT=9000

# Database ports (when using external databases)
MYSQL_PORT=3306
POSTGRESQL_PORT=5432
REDIS_PORT=6379
MONGODB_PORT=27017

# Network configuration
NETWORK_NAME=oracle-dev-network
SUBNET=172.20.0.0/16

# =============================================================================
# Security Configuration
# =============================================================================

# SSH configuration
SSH_ENABLE=true
SSH_ROOT_LOGIN=false
SSH_PASSWORD_AUTH=false
SSH_KEY_TYPE=ed25519

# SSL/TLS configuration
SSL_ENABLE=true
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private
SSL_CA_PATH=/usr/local/share/ca-certificates

# Security policies
SECURITY_HARDENING=true
FIREWALL_ENABLE=true
SELINUX_MODE=enforcing

# =============================================================================
# Development Environment
# =============================================================================

# Shell and terminal configuration
SHELL=/bin/bash
TERM=xterm-256color
EDITOR=vim
PAGER=less

# Language and locale
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8
TZ=UTC

# Development tools
GIT_USER_NAME="Developer"
GIT_USER_EMAIL="developer@example.com"
GIT_DEFAULT_BRANCH=main

# Node.js configuration
NODE_ENV=development
NODE_VERSION=18
NPM_REGISTRY=https://registry.npmjs.org/

# Python configuration
PYTHON_VERSION=3.11
PIP_INDEX_URL=https://pypi.org/simple/
PYTHONPATH=/workspace/src

# =============================================================================
# Database Configuration (for development databases)
# =============================================================================

# MySQL/MariaDB
MYSQL_ROOT_PASSWORD=secure_root_password
MYSQL_DATABASE=development
MYSQL_USER=developer
MYSQL_PASSWORD=secure_password
MYSQL_HOST=mysql
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# PostgreSQL
POSTGRES_DB=development
POSTGRES_USER=developer
POSTGRES_PASSWORD=secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password
REDIS_DB=0

# =============================================================================
# Application Configuration
# =============================================================================

# Application environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_KEY=base64:your-app-key-here

# Logging configuration
LOG_LEVEL=debug
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_STACK=single

# Cache configuration
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# =============================================================================
# Monitoring and Performance
# =============================================================================

# Health check configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=5s

# Resource limits
MEMORY_LIMIT=2g
CPU_LIMIT=2
SWAP_LIMIT=1g

# Performance monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PROFILING=false

# =============================================================================
# External Services
# =============================================================================

# Mail configuration (for development)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="Oracle Linux Dev"

# Storage configuration
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Development Workflow
# =============================================================================

# Hot reload and file watching
ENABLE_HOT_RELOAD=true
WATCH_EXTENSIONS=.js,.ts,.php,.py,.go,.rs
IGNORE_PATTERNS=node_modules,vendor,.git,dist,build

# Testing configuration
TEST_ENV=testing
TEST_DATABASE=testing
ENABLE_COVERAGE=true
COVERAGE_FORMAT=html

# Build configuration
BUILD_ENV=development
ENABLE_SOURCE_MAPS=true
MINIFY_ASSETS=false

# =============================================================================
# Custom Configuration
# =============================================================================

# Add your custom environment variables here
# CUSTOM_VAR=value
# API_KEY=your-api-key
# EXTERNAL_SERVICE_URL=https://api.example.com

# Feature flags
FEATURE_NEW_UI=true
FEATURE_BETA_API=false
FEATURE_EXPERIMENTAL=false
