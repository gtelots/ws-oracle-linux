# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
# Docker Compose project name (used as prefix for container names/networks)
COMPOSE_PROJECT_NAME=ws-oracle-linux
# Compose file to use
COMPOSE_FILE=docker-compose.yml
COMPOSE_PATH_SEPARATOR=:

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker image repository (repo/name)
DOCKER_IMAGE_REPOSITORY=gtelmaps/ws-oracle-linux
# Docker image tag/version
DOCKER_IMAGE_TAG=9
# Container name (recommended to include tag/version to avoid collisions)
DOCKER_CONTAINER_NAME=ws-oracle-linux-9
# Container workspace path (path inside the container where app code is mounted)
APP_CODE_PATH_CONTAINER=/workspace

# =============================================================================
# USER & SYSTEM CONFIGURATION
# =============================================================================
USERNAME=dev
# User and Group IDs used to keep file permissions in sync between host and container
USER_UID=1000
USER_GID=1000
# Timezone used inside containers
TZ=Asia/Ho_Chi_Minh

# =============================================================================
# INSTALLATION FLAGS
# =============================================================================
INSTALL_K8S=1
INSTALL_ANSIBLE=1
INSTALL_PYTHON=1
INSTALL_VOLTA=1

# =============================================================================
# RUNTIME ENVIRONMENT
# =============================================================================
# CLI/tool versions installed in the container image
LAZYDOCKER_VERSION=0.24.1
LAZYGIT_VERSION=0.54.2
YQ_VERSION=4.47.1
TASK_VERSION=3.44.1

# Kubernetes Tools
KUBECTL_VERSION=1.31.12
HELM_VERSION=3.18.0
K9S_VERSION=0.50.9

