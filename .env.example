# Oracle Linux 9 Development Container Environment Configuration
# Copy this file to .env and customize for your environment
# Following enterprise security and configuration best practices

COMPOSE_PROJECT_NAME=ws-oracle-linux-dev
COMPOSE_FILE=docker-compose.yml
COMPOSE_PATH_SEPARATOR=:

BASE_IMAGE_NAME=oraclelinux
BASE_IMAGE_TAG=9

# Image configuration
REGISTRY=docker.io
IMAGE_NAME=ws-oracle-linux-dev
IMAGE_TAG=latest

# Container identity and metadata
CONTAINER_NAME=ws-oracle-linux-dev

# Workspace and volume configuration
WORKSPACE_DIR=/workspace
HOME_DIR=/home/dev
DATA_DIR=/data

USER_UID=1000
USER_GID=1000
USER_NAME=dev
ROOT_PASSWORD=root
USER_PASSWORD=dev
TZ=UTC

# =============================================================================
# Development Tools Installation Flags
# =============================================================================
# Set to 'true' to install the tool, 'false' to skip installation
# These flags control which tools are installed during the build process

# Core System and Process Management
# Note: Supervisor is mandatory and always installed

# Infrastructure and DevOps Tools
INSTALL_ANSIBLE=true
INSTALL_TERRAFORM=true
INSTALL_TELEPORT=true

# Kubernetes and Container Orchestration Tools
INSTALL_KUBECTL=true
INSTALL_HELM=true
INSTALL_K9S=true

# Container and Docker Management Tools
INSTALL_DRY=true
INSTALL_LAZYDOCKER=true

# Cloud Platform Tools
INSTALL_AWS_CLI=true
INSTALL_CLOUDFLARED=true
INSTALL_TAILSCALE=true
INSTALL_NGROK=true

# Version Control and Development Tools
INSTALL_GITHUB_CLI=true
INSTALL_LAZYGIT=true

# Testing and Performance Tools
INSTALL_K6=true

# Terminal and Shell Enhancement Tools
INSTALL_ZELLIJ=true
INSTALL_STARSHIP=true
INSTALL_GUM=true

# Build and Task Management Tools
INSTALL_TASK=true
INSTALL_GOMPLATE=true

# Development Environment and Language Management Tools
INSTALL_MISE=true
INSTALL_VOLTA=true
INSTALL_UV=true

# Utility and Script Enhancement Tools
INSTALL_GETOPTIONS=true

# Application-Specific Tools
INSTALL_DBEAVER=true
INSTALL_WP_CLI=true

# Modern CLI Tools and Utilities
INSTALL_NEOVIM=true
INSTALL_FD=true
INSTALL_RIPGREP=true
INSTALL_BAT=true
INSTALL_EZA=true
INSTALL_HTTPIE=true
INSTALL_BTOP=true
INSTALL_TRIVY=true

# Additional Modern CLI Tools
INSTALL_FZF=true
INSTALL_ZOXIDE=true
INSTALL_DUF=true

# Modern CLI Tools (Individual Control)
INSTALL_JQ=true
INSTALL_YQ=true
INSTALL_TLDR=true
INSTALL_NCDU=true
INSTALL_SPEEDTEST_CLI=true
INSTALL_PROCS=true
INSTALL_SD=true
INSTALL_BROOT=true
INSTALL_GPING=true
INSTALL_FASTFETCH=true
INSTALL_THEFUCK=true
INSTALL_CHOOSE=true
INSTALL_HYPERFINE=true
INSTALL_JUST=true
INSTALL_YAZI=true

# System Services and Shell Configuration
# Note: SSH Server and ZSH are installed by default as essential components

# Tool Version Variables (can be overridden)
NEOVIM_VERSION=0.11.3
FD_VERSION=10.3.0
RIPGREP_VERSION=14.1.1
BAT_VERSION=0.24.0
EZA_VERSION=0.23.0
HTTPIE_VERSION=3.2.4
BTOP_VERSION=1.4.4
TRIVY_VERSION=0.58.1
FZF_VERSION=0.58.0
ZOXIDE_VERSION=0.9.6
DUF_VERSION=0.8.1

# Modern CLI Tools Versions
JQ_VERSION=1.7.1
YQ_VERSION=4.44.6
TLDR_VERSION=3.4.0
NCDU_VERSION=1.19
SPEEDTEST_CLI_VERSION=2.1.3
PROCS_VERSION=0.14.8
SD_VERSION=1.0.0
BROOT_VERSION=1.44.2
GPING_VERSION=1.18.0
FASTFETCH_VERSION=2.32.0
THEFUCK_VERSION=3.32
CHOOSE_VERSION=1.3.6
HYPERFINE_VERSION=1.19.0
JUST_VERSION=1.37.0
YAZI_VERSION=0.4.2

# Language Runtime Installation Flags
INSTALL_JAVA=true
INSTALL_RUST=true
INSTALL_GO=true
INSTALL_NODEJS=true
INSTALL_PHP=true
INSTALL_RUBY=true
INSTALL_PYTHON_EXTRAS=true

# Language Runtime Versions
JAVA_VERSION=21
