
# Oracle Linux 9 Development Container Environment Configuration
# Copy this file to .env and customize for your environment
# Following enterprise security and configuration best practices

COMPOSE_PROJECT_NAME=ws-oracle-linux-dev
COMPOSE_FILE=docker-compose.yml
COMPOSE_PATH_SEPARATOR=:
COMPOSE_PROGRESS=plain

BASE_IMAGE_NAME=oraclelinux
BASE_IMAGE_TAG=9

# Image configuration
REGISTRY=docker.io
IMAGE_NAME=ws-oracle-linux-dev
IMAGE_TAG=latest

# Container identity and metadata
CONTAINER_NAME=ws-oracle-linux-dev

# Workspace and volume configuration
WORKSPACE_DIR=/workspace
HOME_DIR=/home/dev
DATA_DIR=/data

USER_UID=1000
USER_GID=1000
USER_NAME=dev
ROOT_PASSWORD=root
USER_PASSWORD=dev
TZ=UTC

# =============================================================================
# Development Tools Installation Flags
# =============================================================================
# Set to 'true' to install the tool, 'false' to skip installation
# These flags control which tools are installed during the build process

# Core System and Process Management
INSTALL_SUPERVISOR=true

# Infrastructure and DevOps Tools
INSTALL_ANSIBLE=true
INSTALL_TERRAFORM=true
INSTALL_TELEPORT=true

# Kubernetes and Container Orchestration Tools
INSTALL_KUBECTL=true
INSTALL_HELM=true
INSTALL_K9S=true

# Container and Docker Management Tools
INSTALL_DRY=true
INSTALL_LAZYDOCKER=true

# Cloud Platform Tools
INSTALL_AWS_CLI=true
INSTALL_CLOUDFLARED=true
INSTALL_TAILSCALE=true
INSTALL_NGROK=true

# Version Control and Development Tools
INSTALL_GITHUB_CLI=true
INSTALL_LAZYGIT=true

# Testing and Performance Tools
INSTALL_K6=true

# Terminal and Shell Enhancement Tools
INSTALL_ZELLIJ=true
INSTALL_STARSHIP=true
INSTALL_GUM=true

# Build and Task Management Tools
INSTALL_TASK=true
INSTALL_GOMPLATE=true

# Development Environment and Language Management Tools
INSTALL_MISE=true
INSTALL_VOLTA=true
INSTALL_UV=true

# Utility and Script Enhancement Tools
INSTALL_GETOPTIONS=true

# Application-Specific Tools
INSTALL_DBEAVER=true
INSTALL_WP_CLI=true