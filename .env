# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
# Docker Compose project name (used as prefix for container names/networks)
COMPOSE_PROJECT_NAME=ws-oracle-linux
# Compose file to use
COMPOSE_FILE=docker-compose.yml
COMPOSE_PATH_SEPARATOR=:

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Oracle Linux base version
ORACLE_LINUX_VERSION=9
# Docker image repository (repo/name)
DOCKER_IMAGE_REPOSITORY=gtelmaps/ws-oracle-linux
# Docker image tag/version
DOCKER_IMAGE_TAG=9
# Container name (recommended to include tag/version to avoid collisions)
DOCKER_CONTAINER_NAME=ws-oracle-linux-9
# Container workspace path (path inside the container where app code is mounted)
APP_CODE_PATH_CONTAINER=/home/dev

# =============================================================================
# USER & SYSTEM CONFIGURATION
# =============================================================================
USERNAME=dev
# User and Group IDs used to keep file permissions in sync between host and container
USER_UID=1000
USER_GID=1000
# User passwords (for dev containers - use secure passwords in production)
ROOT_PASSWORD=root
USER_PASSWORD=dev
# Timezone used inside containers
TZ=Asia/Ho_Chi_Minh

# =============================================================================
# INSTALLATION FLAGS & VERSIONS
# =============================================================================
# Modern UI and Development Tools
INSTALL_GUM=1
INSTALL_ZELLIJ=1
# Enable/disable R Language installation (temporarily disabled due to package issues)
INSTALL_R_LANGUAGE=0

# Core development tools
INSTALL_K8S=1
INSTALL_ANSIBLE=1
INSTALL_PYTHON=1
INSTALL_VOLTA=1

# CLI development tools
INSTALL_TASK=1
INSTALL_LAZYDOCKER=1
INSTALL_LAZYGIT=1
INSTALL_YQ=1

# SSH Server
INSTALL_OPENSSH_SERVER=1

# Additional development tools (1=enable, 0=disable)
INSTALL_CRONTAB=1
INSTALL_NGROK=0
INSTALL_TAILSCALE=0
INSTALL_TERRAFORM=1
INSTALL_CLOUDFLARE=1
INSTALL_TELEPORT=0
INSTALL_DRY=1
INSTALL_WP_CLI=1
INSTALL_DOCKER=1
INSTALL_SUPERVISOR=1
INSTALL_DBEAVER=0

# =============================================================================
# TOOL VERSIONS
# =============================================================================
# Modern CLI Tools
GUM_VERSION=0.16.2
STARSHIP_VERSION=1.17.1
ZELLIJ_VERSION=0.43.1
GOMPLATE_VERSION=v4.3.3
ZINIT_VERSION=latest

# Language Support
R_VERSION=latest

# CLI/tool versions installed in the container image
TASK_VERSION=3.44.1
LAZYDOCKER_VERSION=0.24.1
LAZYGIT_VERSION=0.54.2
YQ_VERSION=4.47.1

# Kubernetes Tools
KUBECTL_VERSION=1.31.12
HELM_VERSION=3.18.5
K9S_VERSION=0.50.9

# Additional Tools Versions
NGROK_VERSION=3.26.0
TAILSCALE_VERSION=1.86.4
TERRAFORM_VERSION=1.12.2
CLOUDFLARE_VERSION=2025.8.0
TELEPORT_VERSION=18.1.5
DRY_VERSION=0.11.2
WP_CLI_VERSION=2.12.0
DOCKER_VERSION=28.3.2
DBEAVER_VERSION=25.1.5
AWS_CLI_VERSION=2.28.12

# =============================================================================
# SSH CONFIGURATION
# =============================================================================
# SSH port inside container (avoid conflict with host SSH on port 22)
SSH_PORT=22
# Host port to map to container SSH port
SSH_FORWARD_PORT=2222